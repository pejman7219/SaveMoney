<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        android:padding="16dp"
        app:cardBackgroundColor="@android:color/black"
        android:id="@+id/recyclerview_ci_layout_cardView">


        <LinearLayout
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/recyclerview_ci_layout_linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_category"
                android:scaleType="fitXY"
                android:id="@+id/recyclerview_ci_layout_imageView_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="سوپری"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/recyclerview_ci_layout_textView_name" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>