<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="title"
                android:id="@+id/report_fragment_recyclerview_layout_textView_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:textSize="10sp"
                android:text="description"
                android:id="@+id/report_fragment_recyclerview_layout_textView_description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="amount"
                android:id="@+id/report_fragment_recyclerview_layout_textView_amount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="left"
                android:padding="5dp"
                android:textSize="10sp"
                android:text="date"
                android:id="@+id/report_fragment_recyclerview_layout_textView_date"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>